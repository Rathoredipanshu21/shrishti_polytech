RewriteEngine On
RewriteBase /srishti/

# 1. Force the stylish 404 page
# This tells the server exactly where to find the error file
ErrorDocument 404 /srishti/404.php

# 2. Logic to hide .php extension safely
# If it's not a folder...
RewriteCond %{REQUEST_FILENAME} !-d
# AND if the .php file actually exists...
RewriteCond %{REQUEST_FILENAME}.php -f
# Then rewrite the URL to the .php file
RewriteRule ^(.+)$ $1.php [L,QSA]